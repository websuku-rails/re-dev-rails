<div class="container">
<% if notice %>
	<p><%= notice %></p>
<% end %>
<p>アイコン</p>
<p><%= image_tag @event.event_img.url %></p>

<p>タイトル</p>
<h1><%= @event.title %></h1>

<p>予定日</p>
<h3><%= @event.date %></h3>

<p>予定時</p>
<h3><%= @event.time %></h3>

<p>本文</p>
<p><%= @event.body %></p>

<br>
<%= link_to "このイベントを編集する", edit_event_path %>
<br>

<h2>参加予定ユーザー</h2>
<% @event.joins.map { |f| f.user_prof }.each do |user_prof| %>
  <h4 class="user">
    <span class="user-name">
      <%= link_to user_prof.name, user_prof_path(user_prof.id) %>
    </span>
    <span class="user-id"><%= user_prof.age %></span>
  </h4>
  <div class="event-body">
    <%= user_prof.introduction %>
  </div>
<% end %>
<br>
<br>
<%= link_to 'Back', events_path %>
</div>

