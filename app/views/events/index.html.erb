<%= link_to "新規作成", new_event_path %>
<% @events.each do |event| %>
	<h1><%= event.title %></h1>
	<h1><%= event.body %></h1>
	<span>
		<%= link_to "詳しく見る", event_path(event.id) %>
	</span>
	</p>
	<% if event.joined_by? current_user %>
		<p>
			<%= link_to "参加解除", delete_joins_path(event), :method => :delete%>
		</p>
	<% else %>
		<p>
			<%= link_to "参加しよう", create_joins_path(event), :method => :post %>
		</p>
	<% end %>
<% end %>
